<%= form_for(@post) do |f| %>
	<% if @post.errors.any? %>
		<div id="error_explanation">
			<h2><%= pluralize(@post.errors.count, "error") %> prevented this post from being saved:</h2>

			<ul>
			<% @post.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>
			</ul>
		</div>
	<% end %>

	<div class="clearfix">
		<%= f.label :title %>
		<div class='input'>
			<%= f.text_field :title, :class => 'xlarge' %>
		</div>
	</div>
	<div class="clearfix">
		<%= f.label :description %>
		<div class='input'>
			<%= f.text_area :description, :class => 'xxlarge', :rows => 6 %>
		</div>
	</div>
	<div class="actions">
		<%= f.submit :class => 'btn primary' %>
	</div>
<% end %>
