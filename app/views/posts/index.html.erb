<div class='page-header'>
  <h1>Posts</h1>
</div>

<div class='row'>
  <div class='span14'>
    <table class='zebra-striped'>
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th style='width: 10%'></th>
        <th style='width: 10%'></th>
      </tr>

    <% @posts.each do |post| %>
      <tr>
        <td><%= link_to post.title, post %></td>
        <td><%= truncate post.description, :length => 60, :separator => ' ' %></td>
        <td><%= link_to 'Edit', edit_post_path(post), :class => 'btn' %></td>
        <td><%= link_to 'Delete', post, confirm: 'Are you sure?', method: :delete, :class => 'btn danger' %></td>
      </tr>
    <% end %>
    </table>

    <br />

    <%= link_to 'New Post', new_post_path, :class => 'btn primary' %>
  </div>
</div>


